<% include header %>
<div id="news-container" style="width: 80%" class="container">
  <div class="row">
    <div class="col-md-3">
      <div class="list-group">
        <a href="#" class="list-group-item active">最近新闻</a>
        <a href="#" class="list-group-item">即将上映</a>
      </div>
    </div>
    <div class="col-md-9">
      <ul class="nav nav-pills">
        <li class="active"><a href="#">最近新闻</a></li>
      </ul>
      <div class="panel panel-default">
        <div class="panel-body">
          <table class="table">
            <% newslist.d.forEach(function (d) { %>
            <tr>
              <td>
                <span><%= d.addtime.substring(0, d.addtime.indexOf(' ')) %></span>
                <span><a href="#"><%= d.title.trim() %></a></span>
              </td>
            </tr>
            <% }) %>
          </table>
        </div>
        <nav>
          <ul class="pagination">
            <li class="<%= curPage == 1 ? 'disabled' : '' %>"><a
                href="/newslist/<%= curPage > 1 ? parseInt(curPage) - 1 : '' %>"
                aria-label="Previous"><span
                  aria-hidden="true">&laquo;</span></a></li>
            <% for(var i = 1;i <= newslist.tolPage;i++){ %>
            <li class="<%= curPage == i ? 'active' : '' %>"><a href="/newslist/<%= i %>"><%= i %> </a></li>
            <% } %>
            <li class="<%= curPage == newslist.tolPage ? 'disabled' : '' %>"><a
                href="/newslist/<%= curPage < newslist.tolPage ? parseInt(curPage) + 1 : '' %>"><span
                  aria-hidden="true">&raquo;</span></a></li>
          </ul>
        </nav>
      </div>
    </div>
  </div>
</div>
<% include footer %>
